{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es6"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build/js",
    "rootDir": ".",
    "target": "es5",
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "typings/**/*"
  ]
}
